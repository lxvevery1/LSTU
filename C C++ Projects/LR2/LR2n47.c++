using namespace std;

int main(){
    float x, y, z;
    setlocale(LC_ALL, "");

    cout << "Введите x: ";
    cin >>x;
    cout << "Введите y: ";
    cin >>y;
    cout << "Введите z: ";
    cin >>z;

    if (x+y>z || x+z>y || y+z>x)
        std::cout << "a) Треугольник существует.\n";
    else
        std::cout << "a) Треугольник не существет.\n";
    // Если квадрат самой большой стороны треугольника больше суммы квадратов двух других его сторон, то этот треугольник является остроугольным. 
    if (x*x+y*y<z*z || x*x+z*z<y*y || y*y+z*z<x*x)
        std::cout << "б) Треугольник остроугольный.\n";

}
