//Даны два действительных положительных числа. Найти среднее арифметическое и среднее геометрическое этих чисел
#include <stdio.h>                                                                            
#include <math.h>
int main()
{   float x, y, a, b;                                                                         //Задаем тип float переменным

    printf("x = ");                                                                           //printf = выводит значение на экран
    scanf("\n%f", &x);                                                                        //scanf = предлагает пользователю ввести значение переменной, \n Продолжить с новой строки
    printf("y = ");                                                                           //&x = ссылаться на переменную x
    scanf("\n%f", &y);

    a = (x + y) / 2.0;                                                                        // Среднее арифметическое переменных x и y

    b = sqrt(x * y);                                                                          // Cреднее геометрическое переменных x и y 

    printf("a = %f\nb = %f\n", a, b);                                                         // Вывод переменной "a" на экран
return 0;
}
