#include <stdio.h>    
#include <math.h>       
 
int main ()
{
    int x, y, a, b, x1, y1; // Ввводим переменные

    x = 12;                 // Переменная 1 (Действительное число)
 
    y = -20;                // Переменная 2 (Действительное число)

    x1 = abs (x);           // Модуль переменной 1 (Действительного числа 1)

    y1 = abs (y);           // Модуль переменной 2 (Действительного числа 2)

    a = (x + y) / 2;        // Среднее арифметическое чисел

    b = sqrt(x1 * y1);      // Среднее геометрическое модулей чисел 

  printf ("%d\n", (a) );    // Вывод переменной "a" на экран 
  printf ("%d\n", (b) );    // Вывод переменной "b" на экран
  return 0;
}
