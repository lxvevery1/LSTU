//Даны два действительных числа. Найдите среднее арифметическое этих чисел и среднее геометрическое их модулей
#include <stdio.h>           
#include <math.h>       
 
int main ()
{
    float x, y, a, b, x1, y1; // Ввводим переменные

    printf("x = ");           //printf = выводит значение на экран
    scanf("\n%f", &x);        //scanf = предлагает пользователю ввести значение переменной, \n Продолжить с новой строки
    printf("y = ");           //&x = ссылаться на переменную x
    scanf("\n%f", &y);

    x1 = abs (x);             // Модуль переменной 1 (Действительного числа 1)

    y1 = abs (y);             // Модуль переменной 2 (Действительного числа 2)

    a = (x + y) / 2;          // Среднее арифметическое чисел

    b = sqrt(x1 * y1);        // Среднее геометрическое модулей чисел 

  printf ("%f\n", (a) );      // Вывод переменной "a" на экран 
  printf ("%f\n", (b) );      // Вывод переменной "b" на экран
  return 0; 
}
